{% extends 'base.html.twig' %}

{% block title %}Posts{% endblock %}

{% block body %}
    <a href="{{ path('app_post_new') }}">Crear nuevo</a>
    <h1>Mi Blog</h1>
        {% for post in posts %}
                <a href="{{ path('app_post_show', {'id': post.id}) }}"><h2>{{ post.title }}</h2></a>
                <p>{{ post.content }}</p>
                <p>{{post.user.username}}: {{ post.date ? post.date|date('d-m-Y H:i:s') : '' }}</p>
                <p>
                    
                </p>
        {% else %}
                <p colspan="5">No se han encontrado posts</p>
        {% endfor %}
{% endblock %}
