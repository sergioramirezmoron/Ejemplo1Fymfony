{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
                <h1>{{ post.title }}</h1>

                <p>{{ post.content }}</p>

                <p>Fecha: <small>{{ post.date ? post.date|date('Y-m-d H:i:s') : '' }}</small></p>
                
                <h3>Comentarios:</h3>
                <a href="{{ path('app_comment_new', {'id': post.id}) }}">Crear comentario</a><br>
                
                {% for comment in post.comments %}
                   <p>{{comment.date|date('Y-m-d H:i:s')}} - {{comment.author.username}}: {{comment.content}}</p>
                {% endfor %}
                

    <a href="{{ path('app_post_index') }}">Volver</a>

    <a href="{{ path('app_post_edit', {'id': post.id}) }}">Editar</a>

    {{ include('post/_delete_form.html.twig') }}
{% endblock %}
